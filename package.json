{
  "name": "bruno-conway-web-app",
  "private": true,
  "volta": {
    "node": "20.17.0",
    "npm": "10.8.3",
    "pnpm": "9.9.0"
  },
  "scripts": {
    "start": "vite -c ./config/vite.config.ts --port 13000",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c ./config/.eslintrc.js --debug",
    "unittest": "jest --config=./config/jest.config.js --forceExit --detectOpenHandles --passWithNoTests --watchAll=false --coverage",
    "test": "cross-env pnpm lint && pnpm unittest && pnpm e2e-headless",
    "build": "cross-env tsc && vite build -c ./config/vite.config.ts"
  },
  "dependencies": {
    "polished": "^4.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "styled-components": "^6.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.1",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "undici": "^6.19.8",
    "vite": "^5.4.2"
  }
}